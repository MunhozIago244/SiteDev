create database company_1;
use company_1;


create table empregados (
    id bigint primary key auto_increment,
    nome varchar(100),
    data_nascimento date,
    cpf varchar(14),
    genero enum('m', 'f'),
    data_contratacao date
);

create table cargos (
    id bigint primary key auto_increment,
    nome varchar(100)
);

create table salarios (
    id bigint primary key auto_increment,
    id_empregado bigint,
    salario_bruto decimal(10, 2),
    periodo_inicio date,
    periodo_fim date,
    foreign key (id_empregado) references empregados(id)
);

create table departamentos (
    id bigint primary key auto_increment,
    nome varchar(100),
    id_gerente bigint,
    foreign key (id_gerente) references empregados(id)
);

create table empregados_departamentos (
    id bigint primary key auto_increment,
    id_empregado bigint,
    id_departamento bigint,
    periodo_inicio date,
    periodo_fim date,
    foreign key (id_empregado) references empregados(id),
    foreign key (id_departamento) references departamentos(id)
);

create table cargos_empregados (
    id bigint primary key auto_increment,
    id_empregado bigint,
    id_cargo bigint,
    periodo_inicio date,
    periodo_fim date,
    foreign key (id_empregado) references empregados(id),
    foreign key (id_cargo) references cargos(id)
);

create table gerentes_departamentos (
    id int primary key auto_increment,
    id_departamento bigint,
    id_gerente bigint,
    periodo_inicio date,
    periodo_fim date,
    foreign key (id_departamento) references departamentos(id),
    foreign key (id_gerente) references empregados(id)
);

